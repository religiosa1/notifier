{
  "extends": "@tsconfig/node-lts-strictest/tsconfig.json",
  "references": [{ "path": "../shared/tsconfig.json"}],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true,
    "ignoreDeprecations": "5.0",
    "compilerOptions": {
    }
  },
  "include": [
    "./src/",
    "./scripts/",
    "./prisma",
    "./index.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "ignoreDeprecations": "5.0",
    "outDir": "dist",
    "declaration": true,
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@shared/*": [  "../shared/src/*" ]
    }
  }
}