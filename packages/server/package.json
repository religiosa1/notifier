{
  "name": "@tg-notifier/server",
  "version": "2.0.0",
  "description": "Telegram notifier bot",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "Viacheslav Azarov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/religiosa1/notifier.git"
  },
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsup ./index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "salt": "tsx scripts/salt.ts",
    "generate-jwt-secret": "tsx scripts/generate-jwt-secret.ts",
    "db:make-migration": "drizzle-kit generate:pg --schema=./src/db/schema.ts",
    "db:migrate": "tsx scripts/db-migrate",
    "db:seed": "tsx scripts/db-seed.ts",
    "test": "vitest --run"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.1.11",
    "@tsconfig/node-lts": "^20.1.0",
    "@tsconfig/strictest": "^2.0.2",
    "@types/connect": "^3.4.38",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "jsonc-parser": "^3.2.0",
    "node-telegram-bot-api": "^0.64.0",
    "pino": "^8.17.1",
    "postgres": "^3.4.3",
    "rfc4648": "^1.5.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@hono/node-server": "^1.3.3",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.10.5",
    "@types/node-telegram-bot-api": "^0.64.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.6",
    "hono": "^3.11.8",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
